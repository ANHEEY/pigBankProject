	<!-- 회원 정보 목록 -->
	<select id="listCustomer" resultType="com.pigbank.project.dto.CustomerDTO">
		SELECT id,name,regDate,grade,cusState
  		  FROM customer
 	  	 ORDER BY regDate DESC
	</select>
	
