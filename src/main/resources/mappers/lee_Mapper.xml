<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
     
    <!-- namespace="패키지명.인터페이스" -->
<mapper namespace="com.pigbank.project.dao.LeeMapper">

	<select id="accountList" parameterType="String" resultType="com.pigbank.project.dto.AccountDTO">
		SELECT acNumber FROM account_tbl WHERE id = #{id}
	</select>
	
	<select id="balance" parameterType="long" resultType="com.pigbank.project.dto.AccountDTO">
		SELECT acBalance FROM ACCOUNT_TBL WHERE ACNUMBER = #{acNumber}
	</select>
</mapper>